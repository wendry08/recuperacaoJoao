<Window x:Class="CadastroSistema.AlunoCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Aluno" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Nome"/>
        <TextBox x:Name="txtNome" Width="300"/>

        <TextBlock Text="CPF"/>
        <TextBox x:Name="txtCpf" Width="300"/>

        <TextBlock Text="Data de Nascimento"/>
        <DatePicker x:Name="dtpDataNascimento" Width="300"/>

        <TextBlock Text="Telefone"/>
        <TextBox x:Name="txtTelefone" Width="300"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="txtEmail" Width="300"/>

        <Button Content="Salvar" Width="100" Margin="10" Click="SalvarAluno_Click"/>
    </StackPanel>
</Window>
