<Window x:Class="CadastroSistema.CursoCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Curso" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Nome"/>
        <TextBox x:Name="txtNome" Width="300"/>

        <TextBlock Text="Descrição"/>
        <TextBox x:Name="txtDescricao" Width="300"/>

        <TextBlock Text="Coordenador"/>
        <TextBox x:Name="txtCoordenador" Width="300"/>

        <TextBlock Text="Status"/>
        <ComboBox x:Name="cmbStatus" Width="300">
            <ComboBoxItem Content="Ativo"/>
            <ComboBoxItem Content="Inativo"/>
        </ComboBox>

        <Button Content="Salvar" Width="100" Margin="10" Click="SalvarCurso_Click"/>
    </StackPanel>
</Window>
