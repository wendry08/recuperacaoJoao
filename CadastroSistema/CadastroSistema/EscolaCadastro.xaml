<Window x:Class="CadastroSistema.EscolaCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Escola" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Nome Fantasia"/>
        <TextBox x:Name="txtNomeFantasia" Width="300"/>

        <TextBlock Text="Razão Social"/>
        <TextBox x:Name="txtRazaoSocial" Width="300"/>

        <TextBlock Text="CNPJ"/>
        <TextBox x:Name="txtCnpj" Width="300"/>

        <TextBlock Text="Rua"/>
        <TextBox x:Name="txtRua" Width="300"/>

        <TextBlock Text="Número"/>
        <TextBox x:Name="txtNumero" Width="300"/>

        <TextBlock Text="Bairro"/>
        <TextBox x:Name="txtBairro" Width="300"/>

        <TextBlock Text="Cidade"/>
        <TextBox x:Name="txtCidade" Width="300"/>

        <TextBlock Text="Estado"/>
        <TextBox x:Name="txtEstado" Width="300"/>

        <Button Content="Salvar" Width="100" Margin="10" Click="SalvarEscola_Click"/>
    </StackPanel>
</Window>
